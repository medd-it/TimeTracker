<div>
  <h2>Projects</h2>

  <%= link_to('Add a new Project', new_project_path) %>

  <table>
    <tr>
      <th>Code</th>
      <th>Description</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Actions</th>
    </tr>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.code %></td>
        <td><%= project.description %></td>
        <td><%= project.start_date %></td>
        <td><%= project.end_date %></td>
        <td>
          <%= link_to('Show', project_path(project.id)) %>
          <%= link_to('Edit', edit_project_path(project.id)) %>
          <%= link_to('Delete', delete_project_path(project.id)) %>
        </td>
      </tr>
    <% end %>
  </table>

</div>