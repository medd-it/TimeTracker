<%=  link_to('Back to List', users_path) %><br>

<div>
  <h2>Edit User</h2>

  <%= form_for(@user) do |f| %>
    <table>
      <tr>
        <th>E-Mail</th>
        <td><%= f.text_field(:e_mail) %></td>
      </tr>
      <tr>
        <th>Name</th>
        <td><%= f.text_field(:name) %></td>
      </tr>
      <tr>
        <th>Surname</th>
        <td><%= f.text_field(:surname) %></td>
      </tr>
      <tr>
        <th>Start date</th>
        <td><%= f.date_field(:start_date) %></td>
      </tr>
      <tr>
        <th>End date</th>
        <td><%= f.date_field(:end_date) %></td>
      </tr>
    </table>
    <div>
      <%= f.submit('Edit User') %>
    </div>
  <% end %>
</div>